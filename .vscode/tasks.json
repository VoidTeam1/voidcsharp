{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet ../devenv/CSharp.Lua.Launcher.dll -s ../src -d ../lua/csharp/compiled",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "refresh",
            "type": "shell",
            "command": "echo --Compiled >> ../lua/autorun/sh_csharpload.lua",
            "group": "build",
            "dependsOn": [
                "build"
            ],
            "problemMatcher": []
        }
    ]
}